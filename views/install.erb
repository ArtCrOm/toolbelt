# let the user know what we're about to do

echo "This script requires administrator access to install software packages onto your system"
echo "You will be prompted for your password by sudo."

sudo sh <<SCRIPT

  # add heroku repository to apt
  echo "deb http://toolbelt.herokuapp.com/ubuntu ./" > /etc/apt/sources.list.d/heroku.list

  # install heroku's release key for package verification
  wget -O- https://toolbelt.herokuapp.com/apt/release.key | apt-key add -

  # update your sources
  apt-get update

  # install the toolbelt
  apt-get install heroku-toolbelt

SCRIPT
