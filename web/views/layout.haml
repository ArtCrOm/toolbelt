!!! 5
%html
  %head
    %meta{ :charset => "utf-8" }
    %title Heroku Toolbelt

    %meta{ :name => "description", :content => "Heroku command-line tooling for working with the Heroku platform, on OS X, Windows and Debian/Ubuntu." }

    %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }
    %meta{ :name => "viewport", :content => "width=device-width" }

    %link{ :rel => "icon", :href => "https://nav.heroku.com/images/logos/favicon.ico", :type => "image/x-icon" }

    %link{ :rel => "stylesheet", :href => "https://statics.herokuapp.com/fonts/fonts.css" }
    %link{ :rel => "stylesheet", :href => "/screen.css" }

    %script{ :src => "/scripts/jquery.min.js" }
    %script{ :src => "/scripts/jquery.pjax.js" }

    %script{ :src => "/scripts/modernizr.min.js" }

    /[if lte IE 7]
      %link{ :rel => "stylesheet", :href => "/ie7.css" }

    :javascript
      $(window).ready(function () {
        $('.tabNavigation a').pjax('#instructions').live('click', function() {
          $('.tabNavigation a').removeClass('selected');
          $(this).addClass('selected');
        });
        $('.tabNavigation .#{platform} a').addClass('selected');
      });

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-2989055-1']);
      _gaq.push(['_setDomainName', '.heroku.com']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  %body
    .wrapper
      = yield
